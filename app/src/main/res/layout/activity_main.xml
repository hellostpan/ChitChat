<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dl_act_main">

    <include layout="@layout/item_main_content"/>

    <android.support.design.widget.NavigationView
        android:id="@+id/nv_act_main"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        style="@style/MenuStyle"
        app:theme="@style/MenuStyle"
        app:headerLayout="@layout/header_navigation_view"
        app:menu="@menu/activity_main_navigation_menu"/>
</android.support.v4.widget.DrawerLayout>
