<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!--&lt;!&ndash;按钮选中或者点击获得焦点后的颜色&ndash;&gt;
        <item name="colorAccent">@color/colorAccent</item>
        &lt;!&ndash;和 colorAccent相反，正常状态下按钮的颜色&ndash;&gt;
        <item name="colorControlNormal">#ff0000</item>-->
        <!--&lt;!&ndash;Activity窗口的颜色&ndash;&gt;
        <item name="android:windowBackground">@color/material_blue_grey_800</item>
        &lt;!&ndash;Button按钮正常状态颜色&ndash;&gt;
        <item name="colorButtonNormal">@color/accent_material_light</item>
        &lt;!&ndash;EditText 输入框中字体的颜色&ndash;&gt;
        <item name="editTextColor">@android:color/white</item>-->

    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="MenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/gray_800</item>
    </style>
</resources>
